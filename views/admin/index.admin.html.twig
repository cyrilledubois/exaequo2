          {% for membres in users %}
          <tbody>
            <tr>
              <td>{{ membres.username }}</td>
              <td>{{ membres.firstname }}</td>
              <td>{{ membres.phone }}</td>
            </tr>
          </tbody>
          {% endfor %}	
        </table>
        </div>
  
        
      <div class="col-md-6">
        <form action="upload.php" method="post" enctype="multipart/form-data">
          <p>Ajout fichier PDF du nouveau planning:</p>
          <input type="file" name="fileToUpload" id="fileToUpload">
          <input type="submit" value="Envoyer" name="submit">
        </form>
      </div>
    </div>
  </div>
