<section>
  <div class="container-fluid">
    <div class="row">
    {# SECTION LISTE UTILISATEURS GENERAUX #}
      <div class="col-md-6 bg-primary">
        <h2>Liste des membres</h2>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">*</th>
              <th scope="col">Nom</th>
              <th scope="col">Prenom</th>
              <th scope="col">Phone</th>
            </tr>
            </thead>
            {% for membres in users %}
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>{{ membres.username }}</td>
                <td>{{ membres.firstname }}</td>
                <td>{{ membres.phone }}</td>
              </tr>
            </tbody>
            {% endfor %}	
          </table>
        </div>

        {#SECTION UPLOAD PDF#}
        <div class="col-md-6 bg-warning">
          <h2>Upload PDF</h2>
          <form action="upload.php" method="post" enctype="multipart/form-data">
            <p>Nouveau planning PDF:</p>
            <input type="file" name="fileToUpload" id="fileToUpload">
            <input type="submit" value="Envoyer" name="submit">
          </form>
        </div>
      </div>
    </div>
  </section>

