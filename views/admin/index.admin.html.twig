  {% extends "layout.html.twig" %}
  
		{% block title %}Admin{% endblock %}

		{% block content %}
           <body id="page-top">

    <!-- Navigation -->
    <nav>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="#calendar">Gestion calendrier</a>
        </li>
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="#resa">Reservations</a>
        </li>
        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#membres">Liste des membres</a>
        </li>
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="#upload">Uploads</a>
        </li>
      </ul>
    </nav>

    <!--HEADER-->
    <header class="bg-primary text-white">
      <div class="container text-center">
        <h1>Bienvenue dans votre interface d'administration</h1>
        <p class="lead"></p>
      </div>
    </header>

    <!--PLANING-->
	<div id="planning" class="container-fluid">
	{{dump(planning)}}
	 {% for plannings in planning %}
		<div class="row">
			<div class="col-md-12">
			{{dump(planning)}}
				<div id="planning" class="col-md-1 bg-primary text-white" name="heure"> {{ plannings.username }} </div> 
				<div id="planning" class="col-md-2 bg-secondary text-white" name="duree"> {{ plannings.email }} </div> 
				<div id="planning" class="col-md-3 bg-success text-white" name="cours"> {{ plannings.sex }} </div> 
				<div id="planning" class="col-md-3 bg-danger text-white" name="intensite"> {{ plannings.town }}</div> 
				<div id="planning" class="col-md-3 bg-warning text-white"><a href="#">Reserver</a></div>
			</div>
		</div>
		{% endfor %} 
	</div>

  <!--SECTION UPLOAD-->
  <section id="upload">
    <div class="container">
      <div class="row">
        <form action="upload.php" method="post" enctype="multipart/form-data">
          <p>Fichier PDF du nouveau planning:</p><br/><br/>
          <input type="file" name="fileToUpload" id="fileToUpload">
          <input type="submit" value="Envoyer" name="submit">
        </form>
      </div>
    </div>
  </section>
       
		{% endblock %}