  <div class="container-fluid">
    <div class="row">
    {# VUE PLANNING #}
      <div class="col-md-8 bg-info">
          {% for cours in planning %}
          <div class="liste_cours">
            <div class="col-md-2">{{ cours.date_cours|date('h:i') }}</div>
            <div class="col-md-2">{{ cours.nom }}</div>
            <div class="col-md-2">{{ cours.intensite }}</div>
            <div class="col-md-2">{{ cours.duree }} minutes</div>
          </div>
          {% endfor %}
      </div>


    {# UTILISATEUR AYANT RESERVER #}
    <div class="col-md-4 bg-success">
      <h2>Liste des inscrits</h2>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Nom</th>
                  <th scope="col">Prenom</th>
                  <th scope="col">Cour</th>
                  <th scope="col">Phone</th>
                </tr>
                </thead>
                {% for inscrit in reserv %}
                <tbody>
                  <tr>
                    <td>{{ inscrit.firstname }}</td>
                    <td>{{ inscrit.nom}}</td>
                  </tr>
                </tbody>
                {% endfor %}	
              </table>
            </div>
        </div>
